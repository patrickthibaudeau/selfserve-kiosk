{{> header}}
{{> navigation}}
<div class="container mt-3">
    <div class="row">
        <div id="courseCalendar" class="col-md-12">
            <div class="card card-kiosk-default">
                <div class="card-header">
                    <h3> {{{courses_for}}}</h3>
                </div>
                <div class="card-body">                    
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <table id="kiosk-course-calendar-table" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            
                                        </th>
                                        <th>
                                            {{{course_name}}}
                                        </th>                                       
                                        <th>
                                            {{{room}}}
                                        </th>
                                         <th>
                                            {{{start_time}}}
                                        </th>
                                        <th>
                                            {{{taught_by}}}
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                {{#courses}}
                                <tr>
                                    <td>
                                        {{{hour}}}
                                    </td>
                                    <td>
                                        {{{faculty}}}/{{{subject}}} {{{courselevel}}}{{{coursenumber}}} {{{sectionkey}}} {{{langofinstruction}}} {{{instructionalformat1}}} {{{groupnumber}}}
                                    </td>
                                    <td>
                                        <a href="{{{wwwroot}}}/mapwize.php?lang={{{lang}}}&place={{{building}}}_{{{room}}}">{{{building}}} {{{room}}}</a>
                                    </td>
                                    <td>
                                        {{{hour}}}{{{hour_symbol}}}{{{minute}}}
                                    </td>                                    
                                    <td>
                                        {{{firstname}}} {{{surname}}}
                                    </td>
                                </tr>
                                {{/courses}}
                                </tbody>
                            </table>
                            
                        </div>
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</div>
{{> footer_scripts}}
<script src="js/course_calendar.js"></script>
{{> footer}}


